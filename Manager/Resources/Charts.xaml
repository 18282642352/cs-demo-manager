    <DataTemplate x:Key="PlayerEquipmentValueTrackBallTemplate">
        <Border BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Highlight}"
                Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                Margin="-8">
