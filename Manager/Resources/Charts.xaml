                    <Run Text="{x:Static properties:Resources.Round}" />
                    <Run Text=":" />
                    <Run Text="{Binding Path=DataItem.Label}" />
                </TextBlock>
                <TextBlock Text="{Binding Path=DataItem.Value, StringFormat='{}{0}$'}"
